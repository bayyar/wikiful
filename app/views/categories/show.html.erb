<h1><%= @category.category_name %></h1><br>
	<table class="table table-hover">
		<tr>
			<th>Article Title</th>
			<th>Date Created</th>
		</tr>
	<% @category.articles.each do |article| %>
		<tr>
			<td><%= link_to article.title.truncate(50), article %></h5></td>
			<td><%= article.created_at.strftime('%b. %d, %Y') %></td>
		</tr>
	<% end %>
	</table>
<div class ="col-lg-12">
<center><h3>Recent Articles</h3></center>
<table class="table table-hover">
<tr>
<% @recentart.each do |recentart| %>
	<td><h4>
		<%= link_to recentart.title.truncate(60), recentart %>
		<small>(<%= recentart.created_at.strftime('%b. %d, %Y') %>)</small>
	</h4></td>
</tr>
<tr>
	<td><%= recentart.content.truncate(250) %> ... <%= link_to "Read More", recentart %>
	</tr>
<% end %>
</tr>
</table>
</div>